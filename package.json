{
  "name": "api-e2e-testing-framework",
  "version": "1.0.0",
  "description": "End-to-end API testing framework using Axios",
  "main": "index.js",
  "scripts": {
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:smoke": "jest --testPathPattern=smoke",
    "test:regression": "jest --testPathPattern=regression",
    "test:report": "jest --runInBand && node src/utils/generateReport.js",
    "report:open": "open ./reports/html-report/detailed-report.html || xdg-open ./reports/html-report/detailed-report.html || start ./reports/html-report/detailed-report.html"
  },
  "keywords": [
    "api",
    "testing",
    "e2e",
    "axios"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "jest-html-reporters": "^3.1.7",
    "dotenv": "^16.3.1"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "joi": "^17.11.0"
  }
}
